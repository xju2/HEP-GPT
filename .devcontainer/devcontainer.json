{
    "name": "docexoty/llm",
    "image": "docker.io/docexoty/llm:latest",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "eamodio.gitlens",
                "ms-toolsai.jupyter",
                "GitHub.copilot",
                "ms-python.vscode-pylance",
                "ms-python.isort"
            ],
            "settings": {
                "files.trimTrailingWhitespace": true,
                "python.defaultInterpreterPath": "/usr/bin/python"
            }
        }
    }
}